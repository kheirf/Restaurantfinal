<h1>Menu#displayMenu</h1>

<h2>Starters</h2>

<% start=Starter.all() %>
<table>
	<tr>
		<th> Name  </th>
		<th> Description </th>
		<th> Price </th>
	</tr>


	<tr>
		<% start.each do |d| %>
		<td> <%= d.name %> </td>
		<td> <%= d.description %> </td>
		<td> <%= d.price %> </td>
	</tr>
	<% end %>
</table>

